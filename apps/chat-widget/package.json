    "react-shadow": "^20.6.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/vite": "4.1.16",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "@vitejs/plugin-react": "4.3.4",
    "eslint": "9.34.0",
    "tailwindcss": "4.1.16",
    "typescript": "5.9.2",
    "vite": "6.0.11",
    "vite-plugin-css-injected-by-js": "3.5.2"
  }
