{
  "name": "chat-widget",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/chat-widget.umd.js",
  "module": "./dist/chat-widget.es.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
